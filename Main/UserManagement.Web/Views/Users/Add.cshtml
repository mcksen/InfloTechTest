@model UserManagement.Web.Models.Users.EditUserViewModel

<h2>Edit</h2>
<form method="POST" asp-coroller="users" action="saveNewUser">
    <div class="table-responsive">
        <table class="table table-">
            <br>
            <br>
            <tbody>

                <tr>
                    <th> <label for=" Forename">Forename</label> </th>
                    <td> <input type="text" name="Forename" pattern="[A-Za-z\s.]+"
                            title="Please enter a valid name (letters and spaces only)" required></td>

                </tr>
                <tr>
                    <th><label for="Surname">Surname</label></th>
                    <td> <input type="text" name="Surname" pattern="[A-Za-z\s.]+"
                            title="Please enter a valid name (letters and spaces only)" required></td>
                </tr>
                <tr>
                    <th><label for="email">Email</label></th>
                    <td> <input type="email" name="email" required>
                    </td>
                </tr>
                <tr>
                    <th><label for="DateOfBirth">D.O.B.</label></th>
                    <td> <input type="date" min="1900-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")"
                            name="DateOfBirth" required></td>

                </tr>
                <tr>
                    <th><label for="Account Active">Account Active</label> </th>
                    <td>
                        <div class="btn-group" role="group">
                            <input type="radio" name="IsActive" value="true" required> Yes
                            <input type="radio" name="IsActive" value="false" required> No
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="form group-row">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="users" asp-action="list" class="btn btn-primary font-end"> Cancel </a>
    </div>
</form>
